<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.murk.kwizgeeq.Questioneer">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginEnd="64dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/progressNumbers"
        android:layout_width="40dp"
        android:layout_height="17dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="10/17"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/progressBar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="222dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginStart="64dp"
        app:layout_constraintBottom_toTopOf="@+id/answerButton2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@android:color/holo_blue_bright" />

    <Button
        android:id="@+id/answerButton1"
        android:layout_width="148dp"
        android:layout_height="61dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:text="3. Answer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/answerButton2"
        android:layout_width="148dp"
        android:layout_height="61dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="24dp"
        android:text="2. data"
        app:layout_constraintBottom_toTopOf="@+id/answerButton3"
        app:layout_constraintHorizontal_bias="0.708"
        app:layout_constraintLeft_toRightOf="@+id/answerButton4"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/answerButton3"
        android:layout_width="148dp"
        android:layout_height="61dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="24dp"
        android:text="4. data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintLeft_toRightOf="@+id/answerButton1"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/answerButton4"
        android:layout_width="148dp"
        android:layout_height="61dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:text="1. Answer"
        app:layout_constraintBottom_toTopOf="@+id/answerButton1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/questNumLabel"
        android:layout_width="315dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:text="Fråga nr x"
        android:textColor="#020202"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/questLabel"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/quizLabel"
        android:layout_width="315dp"
        android:layout_height="25dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:text="Quiznamn"
        android:textColor="#020202"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <TextView
        android:id="@+id/questLabel"
        android:layout_width="315dp"
        android:layout_height="25dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:text="Frågan är xxx?"
        android:textColor="#020202"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
