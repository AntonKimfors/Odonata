<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.murk.kwizgeeq.activity.EditQuizActivity"
    tools:showIn="@layout/activity_edit_quiz">

    <Button
        android:id="@+id/btnColorPicker"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/tvColor"
        android:layout_alignBottom="@+id/tvColor"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/etQuizLabel"
        android:layout_marginLeft="326dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ListView
        android:id="@+id/android:list"
        android:layout_width="350dp"
        android:layout_height="422dp"

        android:layout_marginLeft="16dp"
        android:layout_marginTop="118dp"
        android:divider="@android:drawable/divider_horizontal_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etQuizLabel"
        android:layout_width="350dp"
        android:layout_height="42dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/color"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/etQuizLabel"
        android:layout_marginLeft="252dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
