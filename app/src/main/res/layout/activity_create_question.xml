<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.murk.kwizgeeq.CreateQuestionView">

    <EditText
        android:id="@+id/questionText"
        android:layout_width="366dp"
        android:layout_height="74dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="top|left"
        android:hint="Write question"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.333" />

    <Button
        android:id="@+id/mediaButton"
        android:layout_width="98dp"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:onClick="mediaButtonAction"
        android:text="Add MEdia"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionText" />

    <EditText
        android:id="@+id/correctText"
        android:layout_width="350dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Correct Answer"
        android:inputType="textPersonName"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toBottomOf="@+id/questionText"
        android:layout_marginStart="17dp" />

    <EditText
        android:id="@+id/wrongText1"
        android:layout_width="350dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Incorrect Anwer"
        android:inputType="textPersonName"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/correctText"
        android:layout_marginStart="17dp" />

    <EditText
        android:id="@+id/wrongText2"
        android:layout_width="350dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Incorrect Anwer"
        android:inputType="textPersonName"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/wrongText1"
        android:layout_marginStart="17dp" />

    <EditText
        android:id="@+id/WrongText3"
        android:layout_width="350dp"
        android:layout_height="43dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:hint="Incorrect Anwer"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/wrongText2"
        android:layout_marginStart="17dp" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:onClick="doneButtonAction"
        android:text="Done"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/WrongText3"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/nextQuestionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:adjustViewBounds="false"
        android:onClick="nextButtonAction"
        android:text="Next Question"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WrongText3"
        android:layout_marginEnd="16dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginRight="15dp"
        android:text="PictureMode"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/correctText"
        android:layout_marginEnd="15dp" />

</android.support.constraint.ConstraintLayout>
