<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.murk.kwizgeeq.CreateQuestion">

    <EditText
        android:id="@+id/editText2"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:text="Add MEdia"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="204dp" />

    <EditText
        android:id="@+id/CorrectInput"
        android:layout_width="350dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Correct Answer"
        android:inputType="textPersonName"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="102dp"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <EditText
        android:id="@+id/IncorrectInput1"
        android:layout_width="350dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Incorrect Anwer"
        android:inputType="textPersonName"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/CorrectInput" />

    <EditText
        android:id="@+id/IncorrectInput2"
        android:layout_width="350dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Incorrect Anwer"
        android:inputType="textPersonName"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/IncorrectInput1" />

    <EditText
        android:id="@+id/IncorrectInput3"
        android:layout_width="350dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Incorrect Anwer"
        android:inputType="textPersonName"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/IncorrectInput2"
        android:layout_marginTop="51dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="33dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="155dp"
        android:layout_height="59dp"
        android:layout_marginBottom="33dp"
        android:layout_marginRight="16dp"
        android:adjustViewBounds="false"
        android:text="Next Question"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="213dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="120dp"
        android:layout_height="27dp"
        android:text="PictureMode"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="59dp"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

</android.support.constraint.ConstraintLayout>
